extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-red
                h3 Registo de Tese
            .w3-container
                form.w3-container(action='/processaForm', method='POST')
                    br
                    label.w3-text-red
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text', name='nome')
                    br
                    label.w3-text-red
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text', name='numero')
                    br
                    label.w3-text-red
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text', name='curso')
                    br
                    label.w3-text-red
                        b Instituição
                    input.w3-input.w3-border.w3-light-grey(type='text', name='instituicao')
                    br
                    label.w3-text-red
                        b Título da Tese
                    input.w3-input.w3-border.w3-light-grey(type='text', name='titulo')
                    br
                    label.w3-text-red
                        b Data
                    input.w3-input.w3-border.w3-light-grey(type='text', name='data')
                    br
                    label.w3-text-red
                        b Tipo
                    p
                        input.w3-radio.w3-border.w3-light-grey(type="radio", name="tipo", value="Mestrado")
                        | Mestrado
                    p
                        input.w3-radio.w3-border.w3-light-grey(type="radio", name="tipo", value="Doutoramento")
                        | Doutoramento
                    input.w3-btn.w3-grey(type='submit', value='Enviar')
                    br
                    p
                        a(href="/") Voltar
            footer.w3-container.w3-red
                address Gerado por teseApp
